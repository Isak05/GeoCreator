<link rel="stylesheet" href="./css/games-list.css" />

<ul class="d-flex gap-5 m-0 p-0 mt-5 mb-4 flex-wrap justify-content-center">
  <% for(const game of games) { %>
    <li class="list-unstyled m-0 p-0">
      <a href="./game/<%= game._id %>" class="text-decoration-none text-reset">
        <div class="game position-relative bg-body-tertiary rounded d-flex flex-column">
          <div class="d-flex justify-content-between position-relative z-1 p-2 m-0 rounded-top bg-body-secondary">
            <div>
              <h1 class="h5 m-0"><%= game.title %></h1>
              <h2 class="h6 fst-italic m-0">by <%= game.creator?.username %></h2>
            </div>
            <span class="d-flex flex-row justify-content-center align-items-center me-1">
              <p class="m-0 me-2"><%= game.averageRating ? game.averageRating : "â€“" %></p>
              <img src="./js/components/geocreator-rating/img/filled-star.svg" style="height: 1.5rem;" alt="Star" />
            </span>
          </div>
          <div class="d-flex justify-content-center align-items-center flex-grow-1 overflow-hidden">
            <img src="<%= game.mapUrl %>" alt="Game preview" class="mw-100 mh-100" />
          </div>
        </div>
      </a>
    </li>
  <% } %>
</ul>