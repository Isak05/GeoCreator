    "express": "^5.1.0",
    "express-ejs-layouts": "^2.5.1",
    "express-session": "^1.18.1",
    "helmet": "^8.1.0",
    "mongoose": "^8.13.2",
    "morgan": "^1.10.0",
    "winston": "^3.17.0"
  }
}
